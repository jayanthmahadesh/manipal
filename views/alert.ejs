}

     .one{
        background-color: #f7ffed;    
     }
        body{
            background-image: url(/assets/images/backgroundimage.jpeg);
        }
        .two{
            background-color: #96cfa7;        }
            .container{
                position: absolute;
                top: 10rem;
            }
            .navbar a{
  background-color: rgb(255, 185, 185);
  color: rgb(0, 0, 0);
  border: solid;
  padding: 15px;
  text-align: center;
  text-decoration: none;
}

header{
