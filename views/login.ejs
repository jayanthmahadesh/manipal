<!DOCTYPE html>
<html lang="en" dir="ltr">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ManiPal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="/css/login.css" rel="stylesheet" />
    <link href="/css/bootstrap-social.css" rel="stylesheet"/>
  </head>

  <body>
    <!-- Navbar -->
    <header>

      <div class="navbar">


          <li class="navleft"><img id="favicon" src="/assets/images/favicon.jpeg" alt="Italian Trulli"></li>
          <ul id="nav" class="navright">

              <li><a href="/home">Home <i class="fa-solid fa-house"></i></a></li>
              <li><a href="/home#statistics">Statistics <i class="fa-solid fa-list-ol"></i></a></li>
              <li><a href="/home#rental">Rental <i class="fa-solid fa-cart-plus"></i></a></li>
              <li><a href="/home#contact">Contact <i class="fa-solid fa-phone"></i></a></li>
            
          </ul>


      </div>
  </header>
    <!-- Form -->
    <div class="container forbox ">
      <div class="p-4 m-4 ">
        <div class="col-lg-5 mx-auto border rounded mt-20">
          <h3>
            <div class="alert hello one" role="alert" >
              Login Here
            </div>
          </h3>

          <form class="bg-light" method="post" action="/login">
            <!-- email -->
            <div class="form-group m-1">
              <label for=""><b>Hospital Name</b></label>
              <input class="form-control-sm form-control" id=""
                value=""
                name="username"
                placeholder="Hospital Name"
                type="text"
                autocomplete="off"
              />
            </div>

            <!-- password -->
            <div class="form-group m-1">
              <label for=""><b>Password</b></label>
              <input
                class="form-control-sm form-control"
                id=" "
                name="password"
                placeholder="*******"
                type="password"
              />
            </div>
            <div class="form-group m-1">
              <label for=""><b>Unique ID</b></label>
              <input class="form-control-sm form-control" id=""
                value=""
                name="uniqueID"
                placeholder="uniqueID"
                type="text"
                autocomplete="off"
              />
            </div>
            <div class="btns" role="group" aria-label="Basic example">
    <button type="submit" class="btn btn-primary" name="user">Login as user</button>
    <button type="submit" class="btn btn-primary" name="donor">Login as donor</button>
             </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>